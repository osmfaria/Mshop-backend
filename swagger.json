{
    "openapi":"3.0.0",
    "info":{
        "title":"Motors Shop",
        "description":"API feita com a finalidade de atender o projeto Motors Shop.",
    "version":"1.0.0"
    
    },
    "paths":{

        "/login":{
            "post":{
                "description":"Login de usuario",
                "tags":["Login"],
                "requestBody":{
                    "description":"Gerar o token",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/Login"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Login realizado com sucesso"
                    },
                    "403":{
                        "description":"Email ou senha invalidos"
                    }
                }
            }
        },

        "/users":{
            "post":{
                "description":"Criação de um usuario!",
                "tags":["User"],
                "requestBody":{
                    "description":"Dados para criação",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/RequestUser"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Usuario criado com sucesso"
                    },
                    "400":{
                        "description":"Dados passados incorretamente/email,cpf ou telefone ja estão cadastrados"
                    }
                }
            },
            "get":{
                "description":"Listar todos os usuario!",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "tags":["User"],
                
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            }
        },
        "/users/{id}":{
            "get":{
                "description":"Listar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                    "404":{
                        "description":"Usuario não existe"
                    }            
                }
            },
            "patch":{
                "description":"Atualizar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],"requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/UpdatedUser"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Atualizou o usuario"           
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                "404":{
                        "description":"Usuario não existe"
                     }          
                }
            },
            "delete":{
                "description":"Deletar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"Usuario deletado com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
                    "404":{
                        "description":"Usuario não existe"
                        }            
                }
            }
        },
        "/publications":{
            "post":{
                "description":"Criação de uma publicação",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "tags":["Publication"],
                "requestBody":{
                    "description":"Dados para criação",
                    "content":{
                        "application/json":{
                            "schema":{
                                
                                "$ref":"#/components/schema/RequestPublication"
                                
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Publicação criada com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            },
            "get":{
                "description":"Listar todas as publicações",
                "tags":["Publication"],
                
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    }
                }
            }
        },
        "/publications/{id}":{
            
                "get":{
                    "description":"Listar a publicação pelo id",
                    "tags":["Publication"],
                    "parameters":[
                        {
                            "name":"id",
                            "in":"path",
                            "description":"Id da publicação",
                            "required":true
                        }
                    ],
                    "responses":{
                        "200":{
                            "description":"Publicação listada com sucesso" 
                        },
                        "404":{
                            "description":"Publicação não existe"
                      }

                    }
                },
                "patch":{
                    "description":"Atualizar a publicação pelo id",
                    "tags":["Publication"],
                    "security":[{"bearerAuth":[]}],
                    "parameters":[
                        {
                            "name":"id",
                            "in":"path",
                            "description":"Id da publicação",
                            "required":true
                        }
                    ],"requestBody":{
                        "description":"Dados para Atualização",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "is_active":{"type":"boolean","example":false}
                                    }
                                }
                            }
                        }
                    },
                    "responses":{
                        "200":{
                            "description":"Publicação atualizada com sucesso"
                        },
                        "404":{
                            "description":"Publicação não existe"
                      },
                      "401":{
                        "description":"Token invalido ou não foi passado"
                    }

                    }
                },
                "delete":{
                    "description":"Deletar a publicação pelo id",
                    "tags":["Publication"],
                    "security":[{"bearerAuth":[]}],
                    "parameters":[
                        {
                            "name":"id",
                            "in":"path",
                            "description":"Id da publicação",
                            "required":true
                        }
                    ],
                    "responses":{
                        "204":{
                            "description":"Publicação deletada com sucesso"
                        },
                        "404":{
                            "description":"Publicação não existe"
                      },
                      "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                    }
                }
            
        },
        "/publications/users/{id}":{
            "get":{
                "description":"Listar todas as publicações referente ao usuario",
                "tags":["Publication"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Todas as publicações referente ao usuario listadas"
                    },
                    "404":{
                        "description":"Usuario não existe"
                  }
                }
            }
        },
        "/comments/{id}":{
            "post":{
                "description":"Criação de um Comentario!",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id da publicação",
                        "required":true
                    }
                ],
                "tags":["Comment"],
                "requestBody":{
                    "description":"Dados para criação",
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "description":{"type":"string","example":"descrição aqui"}
                                    
                                }
                                   
                                
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Comentario criado com sucesso"
                    },
                    "404":{
                        "description":"Publicação não existe"
                  },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            },
            
            "delete":{
                "description":"Deletar o Comentario da publicação",
                "tags":["Comment"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id da publicação",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"Comentario deletado com sucesso"
                    },
                    "404":{
                        "description":"Comentario não existe"
                  },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            }
        },
        "/comments/publication/{id}":{
            "get":{
                "description":"Listar todos os comentarios referente a publicação",
                "tags":["Comment"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id da publicação",
                        "required":true
                    }
                ],
                
                "responses":{
                    "200":{
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "404":{
                        "description":"Publicação não existe"
                  },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            }
        },
        "/images/{id}":{
            "delete":{
                "description":"Deletar a imagem pelo id",
                "tags":["Images"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id da imagem",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"No Content"
                        
                    },"401":{
                        "description":"Token invalido ou não foi passado"
                    },
                    "404":{
                        "description":"Imagem não existe"
                  }       

                }
            }
        },
        "/address":{
            
            "get":{
                "description":"Listar o endereço cadastrado",
                "security":[{"bearerAuth":[]}],
                "tags":["Address"],
                
                "responses":{
                    "200":{
                        "description":"Listou o endereço referente ao usuario"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    }
                }
            }
        },
        "/address/{id}":{
            "patch":{
                "description":"Atualizar o endereço pelo id do usuario",
                "tags":["Address"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],"requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/UpdatedAddress"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Endereço atualizado com sucesso"
                    },
                    "401":{
                        "description":"Token invalido ou não foi passado"
                    },
              "404":{
                         "description":"Endereço não existe"
                   }            

                }
            }
        }
       
        
    },
