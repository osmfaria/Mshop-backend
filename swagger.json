{
    "openapi":"3.0.0",
    "info":{
        "title":"Motors Shop",
        "description":"API feita com a finalizado de atender o projeto Motors Shop.",
    "version":"1.0.0"
    
    },
    "paths":{

        "/login":{
            "post":{
                "description":"Login de usuario!",
                "tags":["Login"],
                "requestBody":{
                    "description":"Gerar o token",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/Login"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Cadastro de usuario realizado com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    }
                }
            }
        },

        "/users":{
            "post":{
                "description":"Criação de um usuario!",
                "tags":["User"],
                "requestBody":{
                    "description":"Dados para criação",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/RequestUser"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Cadastro de usuario realizado com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    }
                }
            },
            "get":{
                "description":"Listar todos os usuario!",
                "security":[
                    {
                        "bearerAuth":[]
                    }
                ],
                "tags":["User"],
                
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "$ref":"#/components/schema/ResponseUser"
                                    }
                                    
                                }
                            }   
                        },
                        "description":"Listou todos os usuarios com sucesso"
                    },
                    "400":{
                        "description":"Dados incompletos"
                    }
                }
            }
        },
        "/users/{id}":{
            "get":{
                "description":"Listar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schema/ResponseUser"
                                }
                            }
                        }
                    }
                }
            },
            "patch":{
                "description":"Alterar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],"requestBody":{
                    "description":"Dados para Atualização",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schema/UpdatedUser"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schema/ResponseUser"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "description":"Deletar o usuario pelo id",
                "tags":["User"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"Id do usuario",
                        "required":true
                    }
                ],
                "responses":{
                    "204":{
                        "description":"No Content",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schema/ResponseUser"
                                }
                            }
                        }
                    }
                }
            }
        }
        
    },
    "components":{
        "schema":{
            "ResponseUser":{
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"Adriano"
                    },
                    "email":{
                        "type":"string",
                        "example":"adr@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83939398484)"
                    },"account_type":{
                        "type":"string",
                        "example":"SELLER"
                    },
                    "isAdmin":{
                        "type":"string",
                        "example":false
                    },
                    "cpf":{
                        "type":"string",
                        "example":"12345678990"
                    },"address":{
                        "type":"object",
                        "properties":{
                                "address":{
                                "type":"string",
                                "example":"rua magalhaes neto"
                            },
                                "city":{
                                    "type":"string",
                                    "example":"Rio de janeiro"
                                },
                                "number":{
                                    "type":"string",
                                    "example":123
                                },
                                "state":{
                                    "type":"string",
                                    "example":"RJ"
                                },
                                "cep":{
                                    "type":"string",
                                    "example":"12345678"
                                }
                        }
                        
                    }
                }
            },
            "RequestUser": {
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"Adriano"
                    },
                    "email":{
                        "type":"string",
                        "example":"adrinc@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83)939398454"
                    },
                    "account_type":{
                        "type":"string",
                        "example":"SELLER"
                    },
                    "isAdmin":{
                        "type":"string",
                        "example":true
                    },
                    "cpf":{
                        "type":"string",
                        "example":"12345978990"
                    },
                    "address":{
                        "type":"object",
                        "properties":{
                                "address":{
                                "type":"string",
                                "example":"rua magalhaes neto"
                            },
                                "city":{
                                    "type":"string",
                                    "example":"Rio de janeiro"
                                },
                                "number":{
                                    "type":"string",
                                    "example":123
                                },
                                "state":{
                                    "type":"string",
                                    "example":"RJ"
                                },
                                "cep":{
                                    "type":"string",
                                    "example":"12345678"
                                }
                        }
                        
                    }
                    
                }
            },
            "UpdatedUser": {
                "type":"object",
                "properties":{
                    "name":{
                        "type":"string",
                        "example":"Adriano Nóbrega"
                    },
                    "email":{
                        "type":"string",
                        "example":"adriano@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234567"
                    },
                    "phone":{
                        "type":"string",
                        "example":"(83)939398686"
                    }
                }
            },
            "Login":{
                "type":"object",
                "properties":{
                   
                    "email":{
                        "type":"string",
                        "example":"adrinc@gmail.com"
                    },
                    "password":{
                        "type":"string",
                        "example":"abc1234"
                    }
            }
        }
        },
        "securitySchemes":{
            "bearerAuth":{
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        }
    }
}